<h1>appFinder</h1>
<table class="table table-striped table-hover table-bordered">
  <tr>
    <th>
      <a href="/?sort=name">Name</a><br />
      <form>
        <p>Search</p>
        <p>Enter any part of name</p>
        <input name="name" />
      </form>
    </th>
    <th>
      <a href="/?sort=category">Category</a><br />
      <form>
        <p>Search</p>  
        <p>Enter any part of category</p>
        <input name="Category" />
      </form>
    </th>
    <th>
      <a href="/?sort=price">Price</a><br />
      <form>
        <p>Filter</p>  
        <p>Enter maximum price</p>
        <input name="price" />
      </form>
    </th>
  </tr>
  {{#each rows}}
  <tr>
    <td><a class = "btn btn-primary" href = '/app-view/{{id}}'>{{name}}</a></td>
    <td>{{ category }}</td>
    <td>{{ price }}</td>
    <td><a class = "btn btn-primary" href = '/add-review/{{id}}'>Add review</a></td>
  </tr>
  {{/each}}
</table>
